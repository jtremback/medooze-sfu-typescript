{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "types": [
      "node"
    ],
    "skipLibCheck": true,
    "lib": [
      "es5",
      "dom",
      "esnext"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}